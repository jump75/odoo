        <div t-attf-class="header o_company_#{company.id}_layout" position="before">
            <t t-if="selected_layout and selected_layout == 'ambiance'">
                <t t-call="jumponline_report.boxed_layout_ambiance_style">
                    <t t-set="primary" t-value="company.primary_color_ambiance or 'black'" />
                    <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'" />
                </t>
            </t>
        </div>

        <div t-attf-class="header o_company_#{company.id}_layout" position="attributes">
            <attribute name="t-if">not company.secondary_layout</attribute>
        </div>

        <div t-attf-class="header o_company_#{company.id}_layout" position="after">
            <div t-if="selected_layout and selected_layout == 'ambiance'"
                 t-attf-class="header o_company_#{company.id}_layout"
                 t-att-style="report_header_style">
                <div>
                    <ul class="list-inline mb4">
                        <li class="list-inline-item d-inline"><span t-field="company.name"/></li>
                        <li class="list-inline-item d-inline"><span style="color:#33c4c0"
                                                                    t-field="company.partner_id.name"/></li>
                        <li class="list-inline-item d-inline"><span t-field="company.website"/></li>
                        <li class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>
                            : <span t-field="company.vat"/></li>
                    </ul>
                    <span t-field="company.report_header_ambiance"/>
                    <hr style="height:4px;border-width:0;color:gray;background-color:#33c4c0"/>
                    <div class="row mb8">
                        <div class="col-6">
                            <img t-if="company.logo_ambiance" t-att-src="image_data_uri(company.logo_ambiance)"
                                 style="height:60px" alt="Logo"/>
                        </div>
                    </div>
                </div>
            </div>

            <div t-elif="selected_layout and selected_layout == 'jump'"
                 t-attf-class="header o_company_#{company.id}_layout"
                 t-att-style="report_header_style">
                <div>
                    <ul class="list-inline mb4">
                        <li class="list-inline-item d-inline"><b><span t-field="company.name"/></b></li>
                        <li class="list-inline-item d-inline"><span t-field="company.partner_id.name"/></li>
                        <li class="list-inline-item d-inline"><span t-field="company.website"/></li>
                        <li class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>
                            : <span t-field="company.vat"/></li>
                    </ul>
                    <span t-field="company.report_header"/>
                    <hr style="height:4px;border-width:0;color:gray;background-color:#1c8b9e"/>
                    <div class="row mb8">
                        <div class="col-6">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                 style="height:60px" alt="Logo"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Boxed layout footer -->
        <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout" position="attributes">
            <attribute name="t-if">not company.secondary_layout</attribute>
        </div>

        <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout" position="after">
            <div t-if="selected_layout and selected_layout == 'ambiance'"
                 t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item"><span class="o_force_ltr"
                                                                                t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><span t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer_ambiance"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>

            <div t-if="selected_layout and selected_layout == 'jump'"
                 t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item"><span class="o_force_ltr"
                                                                                t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><span t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </div>
