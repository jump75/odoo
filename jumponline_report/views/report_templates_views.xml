<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="styles_company_report" inherit_id="web.styles_company_report">
        <xpath expr="//t[@t-set='primary']" position="after">
            <t t-if="company.secondary_layout == 'ambiance'">
                <t t-set="primary" t-value="company.primary_color_ambiance or 'black'" />
            </t>
        </xpath>
        <xpath expr="//t[@t-set='secondary']" position="after">
            <t t-if="company.secondary_layout == 'ambiance'">
                <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'" />
            </t>
        </xpath>
    </template>
    <template id="boxed_layout_ambiance_style">
        <style>
            .o_report_layout_boxed #total strong {
                color: <t t-esc="primary"/> !important;;
            }
            .o_report_layout_boxed #informations strong {
                color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_boxed h2 span {
                color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_boxed table thead tr th {
                color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_boxed table tbody tr td.o_line_section td {
                background-color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_boxed table tbody tr td.is-subtotal, .o_report_layout_boxed table tbody tr td td.o_price_total {
                background-color: <t t-esc="secondary"/> !important;
            }
            .row > div > table tr.o_total td, div#total table tr.o_total td {
                background-color: <t t-esc="primary"/> !important;
            }
        </style>
    </template>

    <template id="clean_layout_ambiance_style">
        <style>
            .o_clean_footer {
                border-top: 3px solid <t t-esc="secondary"/> !important;
            }
            .o_clean_footer h4 {
                color: <t t-esc="secondary"/> !important;
            }
            .o_clean_footer .pagenumber {
                border: 3px solid <t t-esc="primary"/> !important;
                background-color: <t t-esc="secondary"/> !important";
            }
            .o_report_layout_clean h1, .o_report_layout_clean h2, .o_report_layout_clean h3 {
                color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_clean strong {
                color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_clean table thead {
                color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_clean table thead tr th {
                border-top: 3px solid <t t-esc="secondary"/> !important" !important;
            }
            .o_report_layout_clean table tbody tr:last-child td {
                border-bottom: 3px solid <t t-esc="secondary"/> !important;
            }
            .o_report_layout_clean #total strong {
                color: <t t-esc="secondary"/> !important;
            }
 
        </style>
    </template>

    <template id="background_layout_ambiance_style">
        <style>
            .o_background_header h3 {
                color: <t t-esc="primary"/> !important;
            }
            .o_background_footer ul li {
                color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_background strong {
                color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_background h2 {
                color: <t t-esc="primary"/>!important;
            }
            .o_report_layout_background thead tr th {
                color: <t t-esc="secondary"/>!important;
            }
            .row > div > table:first-child strong, div#total table:first-child strong, .row > div > table:last-child strong, div#total table:last-child strong, .row > div > table.o_subtotal strong, div#total table.o_subtotal strong, .row > div > table.o_total strong, div#total table.o_total strong {
                color: <t t-esc="primary"/> !important;
            }
        </style>
    </template>

    <template id="standard_layout_ambiance_style">
