                        <li t-if="company.phone" class="list-inline-item"><i class="fa fa-phone" role="img"
                                                                             aria-label="Phone" title="Phone"/> <span
                                class="o_force_ltr" t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><i class="fa fa-at" role="img"
                                                                             aria-label="Email" title="Email"/> <span
                                t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><i class="fa fa-globe" role="img"
                                                                               aria-label="Website"
                                                                               title="Website"/> <span
                                t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img"
                                                                           aria-label="Fiscal number"/><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer_ambiance"/>
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                </div>
            </div>

            <div t-if="selected_layout and selected_layout == 'jump'"
                 t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item"><i class="fa fa-phone" role="img"
                                                                             aria-label="Phone" title="Phone"/> <span
                                class="o_force_ltr" t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><i class="fa fa-at" role="img"
                                                                             aria-label="Email" title="Email"/> <span
                                t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><i class="fa fa-globe" role="img"
                                                                               aria-label="Website"
                                                                               title="Website"/> <span
                                t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img"
                                                                           aria-label="Fiscal number"/><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer"/>
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </div>

    </template>

    <!-- External layout inherited -->
    <template id="web_external_layout_inherited_jumponline" inherit_id="web.external_layout">
        <xpath expr="//t[@t-if='not company']" position="after">
            <t t-if="not selected_layout">
                <t t-if="o and 'selected_layout' in o and o.selected_layout">
                    <t t-set="selected_layout" t-value="o.selected_layout"/>
                </t>
                <t t-elif="o and 'partner_id' in o and o.partner_id.selected_layout">
                    <t t-set="selected_layout" t-value="o.partner_id.selected_layout"/>
                </t>
                <t t-else="">
                    <t t-set="selected_layout" t-value="company.secondary_layout"/>
                </t>
            </t>
        </xpath>

        <xpath expr="//t[@t-if='company.external_report_layout_id']" position="before">
            <t t-if="o and 'partner_id' in o and o.partner_id.report_layout_id"
               t-call="{{o.partner_id.report_layout_id.view_id.key}}"><t t-raw="0"/></t>
        </xpath>

        <xpath expr="//t[@t-if='company.external_report_layout_id']" position="replace">
            <t t-elif="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}">
                <t t-if="selected_layout and selected_layout == 'ambiance'">
                    <t t-attf-call="{{company.external_report_layout_id.key}}_ambiance_style">
                        <t t-set="primary" t-value="company.primary_color_ambiance or 'black'" />
                        <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'" />
                    </t>
                </t>
                <t t-raw="0"/>
            </t>
        </xpath>
    </template>

</odoo>
