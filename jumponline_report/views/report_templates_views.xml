<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="styles_company_report" inherit_id="web.styles_company_report">
        <xpath expr="//t[@t-set='primary']" position="after">
            <t t-if="company.secondary_layout == 'ambiance'">
                <t t-set="primary" t-value="company.primary_color_ambiance or 'black'"/>
            </t>
        </xpath>
        <xpath expr="//t[@t-set='secondary']" position="after">
            <t t-if="company.secondary_layout == 'ambiance'">
                <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'"/>
            </t>
        </xpath>
    </template>
    <template id="boxed_layout_ambiance_style">
        <style type="text/css">
            .o_report_layout_boxed #total strong {
            color: <t t-esc="primary"/> !important;;
            }
            .o_report_layout_boxed #informations strong {
            color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_boxed h2 span {
            color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_boxed table thead tr th {
            color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_boxed table tbody tr td.o_line_section td {
            background-color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_boxed table tbody tr td.is-subtotal, .o_report_layout_boxed table tbody tr td
            td.o_price_total {
            background-color: <t t-esc="secondary"/> !important;
            }
            .row > div > table tr.o_total td, div#total table tr.o_total td {
            background-color: <t t-esc="primary"/> !important;
            }
        </style>
    </template>

    <template id="clean_layout_ambiance_style">
        <style>
            .o_clean_footer {
            border-top: 3px solid <t t-esc="secondary"/> !important;
            }
            .o_clean_footer h4 {
            color: <t t-esc="secondary"/> !important;
            }
            .o_clean_footer .pagenumber {
            border: 3px solid <t t-esc="primary"/> !important;
            background-color: <t t-esc="secondary"/> !important";
            }
            .o_report_layout_clean h1, .o_report_layout_clean h2, .o_report_layout_clean h3 {
            color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_clean strong {
            color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_clean table thead {
            color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_clean table thead tr th {
            border-top: 3px solid <t t-esc="secondary"/> !important" !important;
            }
            .o_report_layout_clean table tbody tr:last-child td {
            border-bottom: 3px solid <t t-esc="secondary"/> !important;
            }
            .o_report_layout_clean #total strong {
            color: <t t-esc="secondary"/> !important;
            }

        </style>
    </template>

    <template id="background_layout_ambiance_style">
        <style>
            .o_background_header h3 {
            color: <t t-esc="primary"/> !important;
            }
            .o_background_footer ul li {
            color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_background strong {
            color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_background h2 {
            color: <t t-esc="primary"/>!important;
            }
            .o_report_layout_background thead tr th {
            color: <t t-esc="secondary"/>!important;
            }
            .row > div > table:first-child strong, div#total table:first-child strong, .row > div > table:last-child
            strong, div#total table:last-child strong, .row > div > table.o_subtotal strong, div#total table.o_subtotal
            strong, .row > div > table.o_total strong, div#total table.o_total strong {
            color: <t t-esc="primary"/> !important;
            }
        </style>
    </template>

    <template id="standard_layout_ambiance_style">
        <style>
            .o_report_layout_standard h2 {
            color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_standard #informations strong {
            color: <t t-esc="secondary"/> !important;
            }
            .o_report_layout_standard #total strong {
            color: <t t-esc="primary"/> !important;
            }
            .o_report_layout_standard table thead {
            color: <t t-esc="secondary"/> !important;
            }
        </style>
    </template>

    <!-- Boxed layout template-->
    <template id="boxed_external_layout_inherited" inherit_id="web.external_layout_boxed">
        <!-- Boxed Layout Header -->
        <xpath expr="//t[@t-raw='0']" position="before">
            <t t-if="selected_layout and selected_layout == 'ambiance'">
                <t t-call="jumponline_report.boxed_layout_ambiance_style">
                    <t t-set="primary" t-value="company.primary_color_ambiance or 'black'"/>
                    <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'"/>
                </t>
            </t>
        </xpath>

        <img t-if="company.logo" position="replace">
            <img t-if="selected_layout and selected_layout == 'ambiance' and company.logo_ambiance"
                 t-att-src="image_data_uri(company.logo_ambiance)" alt="Logo"/>
            <img t-if="selected_layout and not selected_layout == 'ambiance' and company.logo"
                 t-att-src="image_data_uri(company.logo)" alt="Logo"/>
        </img>

        <div class="col-6 text-right mb4" position="replace">
            <t t-if="selected_layout and selected_layout == 'ambiance'">
                <div class="col-6 text-right mb4">
                    <h4 class="mt0" t-field="company.report_header_ambiance"/>
                    <div name="company_address" class="float-right mb4">
                        <span t-field="company.partner_id.name" style="color:#33c4c0"/>
                        <span class="company_address" t-field="company.partner_id"
                              t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="col-6 text-right mb4">
                    <h4 class="mt0" t-field="company.report_header"/>
                    <div name="company_address" class="float-right mb4">
                        <span class="company_address" t-field="company.partner_id"
                              t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
                    </div>
                </div>
            </t>
        </div>

        <!-- Boxed layout footer -->
        <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout" position="attributes">
            <attribute name="t-if">not selected_layout</attribute>
        </div>

        <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout" position="after">
            <div t-if="selected_layout and selected_layout == 'ambiance'"
                 t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item"><span class="o_force_ltr"
                                                                                t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><span t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer_ambiance"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>

            <div t-if="selected_layout and selected_layout == 'jump'"
                 t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item"><span class="o_force_ltr"
                                                                                t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><span t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <!-- Clean layout template-->
    <template id="clean_external_layout_inherited" inherit_id="web.external_layout_clean">
        <!-- header -->
        <xpath expr="//t[@t-raw='0']" position="before">
            <t t-if="selected_layout and selected_layout == 'ambiance'">
                <t t-call="jumponline_report.clean_layout_ambiance_style">
                    <t t-set="primary" t-value="company.primary_color_ambiance or 'black'"/>
                    <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'"/>
                </t>
            </t>
        </xpath>

        <img t-if="company.logo" position="replace">
            <img t-if="selected_layout and selected_layout == 'ambiance' and company.logo_ambiance"
                 t-att-src="image_data_uri(company.logo_ambiance)" alt="Logo"/>
            <img t-if="selected_layout and not selected_layout == 'ambiance' and company.logo"
                 t-att-src="image_data_uri(company.logo)" alt="Logo"/>
        </img>

        <div class="col-5 offset-1" position="replace">
            <t t-if="selected_layout and selected_layout == 'ambiance'">
                <div class="col-5 offset-1" name="company_address">
                    <ul class="list-unstyled">
                        <li t-if="selected_layout and selected_layout == 'ambiance'">
                            <span t-field="company.partner_id.name" style="color:#33c4c0"/>
                        </li>
                        <strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
                        <li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span
                                t-field="company.vat"/></li>
                        <li t-if="company.phone">Tel: <span class="o_force_ltr" t-field="company.phone"/></li>
                        <li t-if="company.email"><span t-field="company.email"/></li>
                        <li t-if="company.website"><span t-field="company.website"/></li>
                    </ul>
                </div>
            </t>
            <t t-else="">
                <div class="col-5 offset-1" name="company_address">
                    <ul class="list-unstyled">
                        <strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
                        <li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span
                                t-field="company.vat"/></li>
                        <li t-if="company.phone">Tel: <span class="o_force_ltr" t-field="company.phone"/></li>
                        <li t-if="company.email"><span t-field="company.email"/></li>
                        <li t-if="company.website"><span t-field="company.website"/></li>
                    </ul>
                </div>
            </t>
        </div>

        <!-- footer -->
        <div t-attf-class="footer o_clean_footer o_company_#{company.id}_layout" position="attributes">
            <attribute name="t-if">not selected_layout</attribute>
        </div>

        <div t-attf-class="footer o_clean_footer o_company_#{company.id}_layout" position="after">
            <div t-if="selected_layout and selected_layout == 'ambiance'"
                 t-attf-class="footer o_clean_footer o_company_#{company.id}_layout">
                <div class="row mt8">
                    <div class="col-3">
                        <span t-field="company.report_footer_ambiance"/>
                    </div>
                    <div class="col-4 text-right">
                        <span class="company_address" t-field="company.partner_id"
                              t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                    </div>
                    <div class="col-4">
                        <h4 class="mt0 mb0 text-uppercase" t-field="company.report_header_ambiance"/>
                    </div>
                    <div class="col-1">
                        <ul t-if="report_type == 'pdf'" class="list-inline pagenumber float-right text-center">
                            <li class="list-inline-item"><strong><span class="page"/></strong></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div t-if="selected_layout and selected_layout == 'jump'"
                 t-attf-class="footer o_clean_footer o_company_#{company.id}_layout">
                <div class="row mt8">
                    <div class="col-3">
                        <span t-field="company.report_footer"/>
                    </div>
                    <div class="col-4 text-right">
                        <span class="company_address" t-field="company.partner_id"
                              t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                    </div>
                    <div class="col-4">
                        <h4 class="mt0 mb0 text-uppercase" t-field="company.report_header"/>
                    </div>
                    <div class="col-1">
                        <ul t-if="report_type == 'pdf'" class="list-inline pagenumber float-right text-center">
                            <li class="list-inline-item"><strong><span class="page"/></strong></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </template>

    <!-- Standard layout template -->
    <template id="standard_external_layout_inherited" inherit_id="web.external_layout_standard">
        <xpath expr="//t[@t-raw='0']" position="before">
            <t t-if="selected_layout and selected_layout == 'ambiance'">
                <t t-call="jumponline_report.standard_layout_ambiance_style">
                    <t t-set="primary" t-value="company.primary_color_ambiance or 'black'"/>
                    <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'"/>
                </t>
            </t>
        </xpath>

        <div class="row" position="replace">
            <div class="row">
                <t t-if="selected_layout and selected_layout == 'ambiance'">
                    <div class="col-3 mb4">
                        <img t-if="company.logo_ambiance"
                             t-att-src="image_data_uri(company.logo_ambiance)" style="max-height: 45px;" alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header_ambiance"
                         name="moto"/>
                </t>
                <t t-else="">
                    <div class="col-3 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;"
                             alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                </t>
            </div>
        </div>

        <div name="company_address" position="replace">
            <div class="col-6" name="company_address">
                <t t-if="selected_layout and selected_layout == 'ambiance'">
                    <div t-field="company.partner_id.name" style="color:#33c4c0"/>
                </t>
                <div t-field="company.partner_id"
                     t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'
                />
            </div>
        </div>

        <!-- footer -->
        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout" position="attributes">
            <attribute name="t-if">not selected_layout</attribute>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout" position="after">
            <div t-if="selected_layout and selected_layout == 'ambiance'"
                 t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                             adding d-inline class fixes the problem-->
                        <li t-if="company.phone" class="list-inline-item d-inline"><span class="o_force_ltr"
                                                                                         t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item d-inline"><span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item d-inline"><span
                                t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item d-inline"><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>

                    <div name="financial_infos">
                        <span t-field="company.report_footer_ambiance"/>
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>

            <div t-if="selected_layout and selected_layout == 'jump'"
                 t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                             adding d-inline class fixes the problem-->
                        <li t-if="company.phone" class="list-inline-item d-inline"><span class="o_force_ltr"
                                                                                         t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item d-inline"><span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item d-inline"><span
                                t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item d-inline"><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>

                    <div name="financial_infos">
                        <span t-field="company.report_footer"/>
                    </div>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </div>

    </template>

    <!-- Background layout template -->
    <template id="background_external_layout_inherited" inherit_id="web.external_layout_background">
        <xpath expr="//t[@t-raw='0']" position="before">
            <t t-if="selected_layout and selected_layout == 'ambiance'">
                <t t-call="jumponline_report.background_layout_ambiance_style">
                    <t t-set="primary" t-value="company.primary_color_ambiance or 'black'"/>
                    <t t-set="secondary" t-value="company.secondary_color_ambiance or 'black'"/>
                </t>
            </t>
        </xpath>

        <img t-if="company.logo" position="replace">
            <img t-if="selected_layout and selected_layout == 'ambiance' and company.logo_ambiance"
                 t-att-src="image_data_uri(company.logo_ambiance)" class="float-left" alt="Logo"/>
            <img t-if="selected_layout and not selected_layout == 'ambiance' and company.logo"
                 t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo"/>
        </img>

        <div class="float-right" position="replace">
            <div class="float-right">
                <t t-if="selected_layout and selected_layout == 'ambiance'">
                    <h3 class="mt0 text-right" t-field="company.report_header_ambiance"/>
                </t>
                <t t-else="">
                    <h3 class="mt0 text-right" t-field="company.report_header"/>
                </t>
            </div>
        </div>

        <div class="float-left company_address" position="replace">
            <div class="float-left company_address">
                <div>
                    <t t-if="selected_layout and selected_layout == 'ambiance'">
                        <strong t-field="company.partner_id.name" style="color:#33c4c0"/>
                    </t>
                    <t t-else="">
                        <strong t-field="company.partner_id.name"/>
                    </t>
                </div>
                <span t-field="company.partner_id"
                      t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
            </div>
        </div>

        <!-- footer -->
        <div t-attf-class="o_company_#{company.id}_layout footer o_background_footer" position="attributes">
            <attribute name="t-if">not selected_layout</attribute>
        </div>

        <div t-attf-class="o_company_#{company.id}_layout footer o_background_footer" position="after">
            <div t-if="selected_layout and selected_layout == 'ambiance'"
                 t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item"><i class="fa fa-phone" role="img"
                                                                             aria-label="Phone" title="Phone"/> <span
                                class="o_force_ltr" t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><i class="fa fa-at" role="img"
                                                                             aria-label="Email" title="Email"/> <span
                                t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><i class="fa fa-globe" role="img"
                                                                               aria-label="Website"
                                                                               title="Website"/> <span
                                t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img"
                                                                           aria-label="Fiscal number"/><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer_ambiance"/>
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                </div>
            </div>

            <div t-if="selected_layout and selected_layout == 'jump'"
                 t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
                <div class="text-center">
                    <ul class="list-inline">
                        <li t-if="company.phone" class="list-inline-item"><i class="fa fa-phone" role="img"
                                                                             aria-label="Phone" title="Phone"/> <span
                                class="o_force_ltr" t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item"><i class="fa fa-at" role="img"
                                                                             aria-label="Email" title="Email"/> <span
                                t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item"><i class="fa fa-globe" role="img"
                                                                               aria-label="Website"
                                                                               title="Website"/> <span
                                t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item"><i class="fa fa-building-o" role="img"
                                                                           aria-label="Fiscal number"/><t
                                t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>
                    <div t-field="company.report_footer"/>
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        of
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </div>

    </template>

    <!-- External layout inherited -->
    <template id="web_external_layout_inherited_jumponline" inherit_id="web.external_layout">
        <xpath expr="//t[@t-if='not company']" position="after">
            <t t-if="not selected_layout">
                <t t-if="o and 'selected_layout' in o and o.selected_layout">
                    <t t-set="selected_layout" t-value="o.selected_layout"/>
                </t>
                <t t-elif="o and 'partner_id' in o and o.partner_id.selected_layout">
                    <t t-set="selected_layout" t-value="o.partner_id.selected_layout"/>
                </t>
                <t t-else="">
                    <t t-set="selected_layout" t-value="company.secondary_layout"/>
                </t>
            </t>
        </xpath>

        <xpath expr="//t[@t-if='company.external_report_layout_id']" position="before">
            <t t-if="o and 'partner_id' in o and o.partner_id.report_layout_id"
               t-call="{{o.partner_id.report_layout_id.view_id.key}}"><t t-raw="0"/></t>
        </xpath>

        <xpath expr="//t[@t-if='company.external_report_layout_id']" position="replace">
            <t t-elif="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}">
                <t t-if="selected_layout and selected_layout == 'ambiance'">
                    <t t-attf-call="{{company.external_report_layout_id.key}}_ambiance_style">
                        <t t-set="primary" t-value="company.primary_color_ambiance or 'black'"/>
