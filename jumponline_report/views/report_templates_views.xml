    <template id="web.external_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            Multicompany
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-if="not selected_layout">
            <t t-if="o and 'selected_layout' in o">
                <t t-set="selected_layout" t-value="o.selected_layout"/>
            </t>
            <t t-elif="o and 'partner_id' in o">
                <t t-set="selected_layout" t-value="o.partner_id.selected_layout"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="selected_layout" t-value="company.secondary_layout"/>
            </t>
        </t>

        <t t-if="o and 'partner_id' in o and o.partner_id.report_layout_id"
           t-call="{{o.partner_id.report_layout_id.view_id.key}}"><t t-raw="0"/></t>
        <t t-elif="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}"><t
                t-raw="0"/></t>
        <t t-else="else" t-call="web.external_layout_standard"><t t-raw="0"/></t>
    </template>

